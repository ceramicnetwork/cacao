{
  "compilerOptions": {
    "module": "ES2020",
    "lib": [
      "dom",
      "es2017",
      "ES2020"
    ],
    "target": "es6",
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "lib",
    "rootDir": "src"
  },
  "include": [
    "./src/**/*"
  ]
}